{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "docker",
            "args": ["run", "--rm", "-it", "-v${workspaceFolder:asp}:/asp", "sh-tools/toppers_sample:gcc-3.4.5", "../configure", "-T", "frksh2a_gcc"]
        },
        {
            "label": "make depend",
            "type": "shell",
            "command": "docker",
            "args": ["run", "--rm", "-it", "-v${workspaceFolder:asp}:/asp", "sh-tools/toppers_sample:gcc-3.4.5", "make", "depend"]
        },
        {
            "label": "make",
            "type": "shell",
            "command": "docker",
            "args": ["run", "--rm", "-it", "-v${workspaceFolder:asp}:/asp", "sh-tools/toppers_sample:gcc-3.4.5", "make"]
        },
        {
            "label": "make asp.bin",
            "type": "shell",
            "command": "docker",
            "args": ["run", "--rm", "-it", "-v${workspaceFolder:asp}:/asp", "sh-tools/toppers_sample:gcc-3.4.5", "make", "asp.bin"]
        },
        {
            "label": "make clean",
            "type": "shell",
            "command": "docker",
            "args": ["run", "--rm", "-it", "-v${workspaceFolder:asp}:/asp", "sh-tools/toppers_sample:gcc-3.4.5", "make", "clean"]
        },
        {
            "label": "make cleandep",
            "type": "shell",
            "command": "docker",
            "args": ["run", "--rm", "-it", "-v${workspaceFolder:asp}:/asp", "sh-tools/toppers_sample:gcc-3.4.5", "make", "cleandep"]
        },
        {
            "label": "make realclean",
            "type": "shell",
            "command": "docker",
            "args": ["run", "--rm", "-it", "-v${workspaceFolder:asp}:/asp", "sh-tools/toppers_sample:gcc-3.4.5", "make", "realclean"]
        },
        {
            "label": "copy asp.bin to sdroot as app.bin",
            "type": "shell",
            "command": "copy",
            "args": ["${workspaceFolder:asp}\\obj\\asp.bin", "C:\\test\\sdroot\\app.bin"]
        },
        {
            "label": "build sdimage",
            "type": "shell",
            "command": "C:\\Users\\basas\\source\\repos\\SDImageBuilder\\SDImageBuilder\\bin\\Debug\\SDImageBuilder.exe",
            "args": ["C:\\test\\sdroot", "${workspaceFolder:asp}\\sd.img"]
        },
        {
            "label": "terminal monitor",
            "type": "shell",
            "command": "sleep 3; Start-Process -FilePath telnet -ArgumentList 127.0.0.1,1201 -WindowStyle Minimized"
        },
        {
            "label": "terminal irq",
            "type": "shell",
            "command": "sleep 3; Start-Process -FilePath telnet -ArgumentList 127.0.0.1,1202 -WindowStyle Minimized"
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "docker run --rm -it -v${workspaceFolder:asp}:/asp -v${workspaceFolder:asp}:/workspace --link qemu00:qemu00 sh-tools/gdb -x gdb.cmd obj/asp"
        },
        {
            "label": "debug-package",
            "type": "shell",
            "dependsOn":["terminal monitor", "terminal irq", "debug"],
            "dependsOrder": "parallel",
            "command": "echo done"
        },
        {
            "label": "prelaunch gdb",
            "type": "shell",
            "command": "docker run --rm -i -d -v${workspaceFolder:asp}:/asp -v${workspaceFolder:asp}:/workspace -p 1201:1201 -p 1202:1202 --name qemu00 sh-tools/qemu -monitor telnet:0.0.0.0:1201,server,nowait -serial tcp::1202,server,nodelay -drive file=SPIROM.BIN,if=mtd,format=raw -drive file=sd.img,if=sd,format=raw -s -S; docker run --privileged -v${workspaceFolder:asp}:/asp -v${workspaceFolder:asp}:/workspace --name debug_sh -i -d --entrypoint=/bin/sh --link qemu00:qemu00 sh-tools/gdb"
        },
        {
            "label": "prelaunch gdb-pkg",
            "type": "shell",
            "dependsOn":["terminal monitor", "terminal irq", "prelaunch gdb"],
            "dependsOrder": "parallel",
            "command": "echo done"
        },
        {
            "label": "postdebug gdb",
            "type": "shell",
            "command": "docker ps -a -f \"name=debug_sh\" -q | % { docker kill $_ }; docker ps -a -f \"name=debug_sh\" -q | % { docker rm $_ }; docker ps -a -f \"name=qemu00\" -q | % { docker kill $_ }"
        }
    ]
}